{
  "manifest_version": 2,
  "name": "Demo Extension",
  "description": "This Extension displays the covid-19 cases and encourages you to stay home üè†",
  "version": "0.0.1",
  "browser_action": {
    "default_title": "Demo Extension",
    // "default_popup": "popup.html",
    "default_icon": "images/house-128.png"
  },
  "icons": {
    "48": "images/house-48.png",
   "128": "images/house-128.png"
  },
  "permissions": [
    "tabs",
    "notifications"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "page": "background.html",
    "script": ["background.js"],
    "persistent": false
  }
}
